{
    "manifest_version": 2,
    "name": "yourkirito",
    "description": "網頁遊戲 mykirito 的輔助工具",
    "version": "1.4.5",
    "page_action": {
        "default_icon": "icon.png",
        "default_popup": "popup/popup.html"
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "homepage_url": "https://mykirito.com",
    "permissions": [
        "tabs",
        "activeTab",
        "declarativeContent"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "*://mykirito.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ]
}